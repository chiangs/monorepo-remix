        "coverage": "turbo run coverage"
    },
    "devDependencies": {
        "eslint-config-custom": "*",
        "prettier": "latest",
        "turbo": "latest"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "dependencies": {},
    "packageManager": "yarn@1.22.19"
