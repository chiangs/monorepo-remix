{
    "name": "monorepo-remix",
    "version": "1.0.0",
    "description": "monorepo",
    "author": "chiangs",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
